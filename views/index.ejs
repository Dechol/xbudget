    <!-- days  -->
    <div class="container">
        <ol class="list-group">
            <% dayArray.forEach((day) => { %>
                <li class="list-group-item daylist">
                    <form action="/show" method="post">
                        <p>
                            <% if(day.date === new Date().toDateString()){ %>
                                Today
                            <% } else { %>
                                <%=day.date %>
                            <% } %>
                            
                            <b><%=day.total %></b>
                            <button class="btn btn-secondary float-end" type="submit" name="dayID" value="<%=day._id%>">show all</button>
                        </form>
                    </p>
                    <% if(idArray.includes(day.id)){ %>
                        <ul class="list-group list-group-flush">
                            <% day.trans.forEach((tran) => { %>
                                <li class="list-group-item">
                                    <form action="/delete" method="post">
                                        <%=tran.name %> <%=tran.amount %>
                                        <input type="hidden" name="dayID" value="<%=day.id%>">
                                        <button class="btn float-end" name="tranID" value="<%=tran.id %>">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                              </svg>
                                        </button>

                                    </form>
                                </li>
                            <% }) %>
                        </ul>
                    <% } %>
                </li>
            <% }) %>
        </ol>
    </div>

